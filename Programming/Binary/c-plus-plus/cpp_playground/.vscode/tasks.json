{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Simple WSL: C++ build active file and run",
            "type": "process",
            "windows": {
                "command": "wsl",
                "args": [
                    "-d",
                    "Ubuntu",
                    "-e",
                    "bash",
                    "-c",
                    "mkdir -p ${workspaceFolder}/build && g++ -static -std=c++20 -o ${workspaceFolder}/build/${fileBasenameNoExtension} ${fileDirname}/${fileBasenameNoExtension}.cpp && ${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "mkdir -p ${workspaceFolder}/build && g++ -static -std=c++20 -o ${workspaceFolder}/build/${fileBasenameNoExtension} ${fileDirname}/${fileBasenameNoExtension}.cpp && ${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}/"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}